ARG FLYWAY_VERSION=10.4.1
FROM flyway/flyway:${FLYWAY_VERSION}-alpine AS flyway

ARG POSTGRES_VERSION=13.14-bullseye
FROM postgres:${POSTGRES_VERSION} AS postgres

ARG PYTHON_VERSION=3.12.2
FROM python:${PYTHON_VERSION} AS python

ARG TIMESCALEDB_VERSION=2.14.2-pg13
FROM timescale/timescaledb:${TIMESCALEDB_VERSION} AS timescaledb

ARG UBUNTU_VERSION=22.04
FROM ubuntu:${UBUNTU_VERSION} AS ubuntu
